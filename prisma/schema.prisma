// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id            String     @id @default(uuid())
  name          String
  image         String?
  slug          String
  path          String
  parentId      String?
  active        Boolean
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  parent        Category?  @relation("CategoryToSubcategory", fields: [parentId], references: [id], onDelete: Cascade)
  subcategories Category[] @relation("CategoryToSubcategory")
}

model Product {
  id                    String                 @id @default(uuid())
  name                  String
  description           String?                @map("body")
  priceHidden           Boolean                @default(false)
  priceInCents          Int                    @default(0)
  images                String                 @default("[]") // Json
  primaryImage          Int                    @default(0)
  tags                  String                 @default("[]") // Json
  published             Boolean                @default(false)
  slug                  String
  productType           String // 'stock' | 'externalUrl' | 'file'
  stock                 Int                    @default(0)
  externalUrl           String?
  storedFile            String? // filePath
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  orders                Order[]
  downloadVerifications DownloadVerification[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id               String   @id @default(uuid())
  userId           String
  productId        String
  pricePaidInCents Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

model DownloadVerification {
  id              String   @id @default(uuid())
  productId       String
  expiresAt       DateTime
  downloadedTimes Int
  ceatedAt        DateTime @default(now())
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
